//应用场景
.application-scene
  clearfix()

  .scenes
    float left
    width 190px
    text-align center
    margin 40px 50px 40px 0

    i
      display inline-block
      size 165px
      background-image url("../images/bg/icon_scene.png")
      background-repeat no-repeat

     for type, index in family life device scene homekit nest
        y= -180px * index
        .icon-{type}
          background-position 0 y

    span
      display block
      font-size 16px
      color #000
      font-weight normal

    &:hover
      color #000



