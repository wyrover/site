//------------------------------
//- 平台介绍页
//------------------------------

//- 基础设置
@import 'partials/_settings'

//- Nib
@import 'nib'

//- 工具
@import "partials/_utilities"

//- 占位符
@import "partials/_placeholders"

//- 内容导航
@import "partials/_content-nav"

// 横幅
.banner
  background-image url("../images/bg/banner_instruction.jpg")

// 平台概览
.platform-summary
  padding-bottom 300px
  padding-top 100px

//应用端架构
.app-structure
  h3
    color #424242
    font-weight normal
    font-size 16px

//功能模块
.fuction-modules
  clearfix()

  .module
    float left
    width 480px
    padding 18px 0
    clearfix()

    i
      float left
      size 45px
      padding 13px
      background-image url("../images/bg/icon_functionmodule.png")
      background-repeat no-repeat

    for type, index in service-connect service-inter service-manage user-manage data-collect count-analysis msg-push application-manage wanrning-service remote-diagnosis operate-module more-plugin
        y= -100px * index + 2px
        .icon-{type}
          background-position 0 y

    .module-text
      float left

      h4
        margin 0
        font-size 16px
        color red

      p
        margin 0
        font-size 14px
        color #343434

//我们的优势
.advantages
  .section-bd
    clearfix()

  .point
    float left
    width 200px
    margin 45px 40px 45px 0
    text-align center

    i
      display inline-block
      size 104px
      background-image url("../images/bg/icon_advantage.png")
      background-repeat no-repeat

     for type, index in simple matural safe performance service compatible opening globalization
        y= -120px * index
        .icon-{type}
          background-position 0 y

    h4
      font-size 20px
      color red
      margin 12px 0

    p
      font-size 13px
      color #464646

//APP SDK
.app-sdk
  div
    clearfix()

  img
    float left
    padding 70px

  .app-img
    margin-top 40px

  .app-sdk-text
    float left

    h4
      font-size 20px
      color red

    li
      color red
      margin-bottom 10px

      span
        color #3e3e3e
        font-size 15px

//嵌入式SDK
.embeded-sdks
  h3
      color #424242
      font-weight normal
      font-size 16px
      margin-bottom 120px

  .embeded
    clearfix()

    .embeded-block
      float left
      width 480px

      h4
        color red
        font-size 20px

      ul
        margin-right 10px
        margin-bottom 100px

        li
          color #313131
          margin-bottom 15px

          span
            color #313131
            font-size 15px

    .embedded-img
      float right
      width 480px
      padding-top 100px

      img
        width 100%

      h6
        text-align center
        font-size 16px
        color #747474
