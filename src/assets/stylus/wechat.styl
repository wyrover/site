//------------------------------
//--homekit方案页
//------------------------------

// 基础设置
@import 'partials/_settings'

// Nib
@import 'nib'

// 工具
@import "partials/_utilities"

// 占位符
@import "partials/_placeholders"

// 横幅
.banner
  background-image url("../images/bg/banner_solution.jpg")

// 内容导航
.intro-nav
  font-size 0
  text-align center
  padding 22px
  background #F7F9FB

  a
  i
    display inline-block
    line-height 30px

  i
    font-size 20px
    color #D2D2D2
    margin 0 30px

  a
    font-size 16px
    color #727272

// 内容
.section-group
  background #FFF
  padding-top 40px

  .section
    padding-bottom 100px
    padding-top 40px

  .section-hd
    font-size 24px
    border-left 4px solid red
    padding-left 10px
    height 28px
    line-height 28px

.section-bd
    padding-top 20px

.section-group-even
  background #F7F9FB

//homekit方案
#solution-homekit
  h4
    font-size 22px
    color #393939

  .homekit
    clearfix()

    .homekit-dialog
      float left
      width 365px
      margin-right 50px

      li
        font-size 14px
        color #6A6A6A
        margin-bottom 25px

//合作案例
.solution-case
  background #f6f6f6

  .case
    clearfix()
    margin-top 90px

    for type in deerma milknanny lifesmart aiyiji
      .img-{type}
        float left
        padding-right 35px

        img
          size 163px

      .dialog-{type}
        float left
        width 700px

        h4
          margin 0
          font-size 22px
          color #393939

        p
          font-size 14px
          color #6a6a6a
          margin-bottom 25px

        li
          font-size 14px
          color #6a6a6a
          margin-bottom 10px


//合作案例
#solution-wechat
  clearfix()

  .wechat-question
    float left
    width 550px
    margin-right 80px

    h4
      font-size 16px
      color #464646

    p
      font-size 14px
      color #6a6a6a
      line-height 25px

    .wechat-answer
      text-indent 2em

  .wechat-picture
    float left
    width 326px

    img
      width 326px
      margin-bottom 80px


//微信应用方案
#application-case
  .wechat-case
    clearfix()

    i
      float left
      display inline-block
      size 40px
      margin 8px
      background-image url("../images/bg/icon_wechat.png")
      background-repeat no-repeat

    for type,index in store shop card pay custom
      offset-y= -50px * index
      .icon-{type}
        background-position 0 offset-y

    .case-text
      float left
      width 800px
      height 56px
      margin-left 8px
      color #747474
      padding-top 8px

      em
        font-style normal
        font-size 16px

      span
        font-size 14px


