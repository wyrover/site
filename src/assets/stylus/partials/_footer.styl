.footer
  background #222
  color #A9A9A9

.foot-contact
  background red
  padding 26px 0px
  text-align center

  span
    display inline-block
    height 56px
    line-height 56px
    font-size 20px
    color #fff
    margin 0 80px

  a
    color #fff

.foot-links
  clearfix()
  padding 56px 0 48px

  .sec
    float left
    width 201px
    font-size 14px

  .sec-qrcode
    width 153px

    .qrcode
      margin 38px 0 0 14px

      img
        display block
        margin-bottom 10px

      span
        display block
        text-align center
        font-size 15px

  h3
    border-left 4px solid red
    height 22px
    line-height 22px
    margin 0
    padding-left 10px
    font-size 20px
    font-weight normal
    color #FFF

  ul
    reset-list()
    padding-left 14px
    margin-top 30px

  li
    line-height 34px

  a
    color #A9A9A9

  dl
    margin 30px 0 0 14px
    line-height 34px

  dt
    color #A9A9A9
    margin-top 10px

  dd
    margin 0

.copyright
  background #181818
  height 36px
  line-height 36px
  font-size 11px
  text-align center
  color #7B7B7B

  p
    margin 0

  a
    color #7B7B7B
