.btn
  display inline-block
  border-width 1px
  border-style solid
  vertical-align middle
  font-size 14px
  border-radius 3px

  &:hover
    cursor pointer
    text-decoration none

  input
  button
    background transparent
    height 32px
    padding 6px 30px
    border none
    outline none

a.btn
  height 32px
  line-height 32px
  padding 0 30px

//- 按钮样式
.btn-default
  background-color #FFF
  border-color red
  color red !important

.btn-primary
  background-color red
  border-color red
  color #FFF !important

//- 按钮尺寸
.btn-sm
  font-size 12px
  border-radius 2px

  input
  button
    height 24px
    padding 3px 20px 4px

a.btn-sm
  height 24px
  line-height 24px
  padding 0 20px

.btn-lg
  font-size 18px
  border-radius 4px

  input
  button
    height 54px
    padding 10px 54px

a.btn-lg
  height 54px
  line-height 54px
  padding 0 54px

//- 药丸样式
.btn-pill
  border-radius 50px
