// 基础设置
@import 'partials/_settings'

// Nib
@import 'nib'

// 工具
@import "partials/_utilities"

// 占位符
@import "partials/_placeholders"

// 横幅
.banner
  position relative
  size 100% 424px
  background url("../images/bg/banner_home.jpg") no-repeat center top

  .cont
    text-align center
    color #FFF
    padding-top 104px

    h2
      margin 0
      font-size 47px

    h3
      margin 0
      font-size 30px
      font-weight normal

    .actions
      margin-top 66px

$main-h3
  color red
  font-size 40px

$main-p
  color #393939
  font-size 20px

// 智能化时代
.main-smart
  text-align center

  h3
    @extend $main-h3

  p
    @extend $main-p

  ul
    reset-list()
    clearfix()

  li
    float left
    width 65px
    height 101px
    padding 0 30px

    i
      display inline-block
      size 65px
      background-image url("../images/bg/icon_function.png")
      background-repeat no-repeat

    for type, index in connect manage user warning longrange upgrade collect excavate
      offset-y= -80px * index
      .icon-{type}
        background-position 0 offset-y



