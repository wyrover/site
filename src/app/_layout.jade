      meta(name="HandheldFriendly", content="true")
      meta(name="MobileOptimized", content="320")
      meta(name="viewport", content="width=device-width, initial-scale=1, minimal-ui, maximum-scale=1.0, user-scalable=no")
      meta(http-equiv="cleartype", content="on")
      meta(name="format-detection", content="telephone=no")
      meta(name="msapplication-TileColor", content="#222222")
    link(rel="shortcut icon", href="#{current.base}images/favicon.ico")
    link(href="#{current.base}styles/base.css", rel="stylesheet")
    if stylesheets
      each stylesheet in stylesheets
        link(rel="stylesheet", href="#{current.base}styles/#{stylesheet}.css")
    if html5
      <!--[if lt IE 9]>
      script(src="http://cdn.staticfile.org/html5shiv/3.7/html5shiv.min.js")
      <![endif]-->
  body(class="#{body_class ? body_class : ''}", id="#{body_id ? body_id : ''}")
    .wrap
      block header
        include partials/_header

      block content

      block footer
        include partials/_footer

    //- Start: 浮层
      +modal({modals:modals})
    //- End: 浮层

    block scripts
      script(src="#{current.base}vendor/jquery.js")
      script(src="#{current.base}scripts/common.js")
