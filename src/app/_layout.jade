//- 导入元件
//------------------------------
//- 全站公用元件
include partials/_components

//- 浮层
include partials/_modals

doctype html
html
  head
    meta(charset="UTF-8")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    title= site_name + '-' + page_title
    meta(name="keyword", content="#{page_keyword || ''}")
    meta(name="description", content="#{page_description || ''}")
    if mobile_page
      meta(name="HandheldFriendly", content="true")
      meta(name="MobileOptimized", content="320")
      meta(name="viewport", content="width=device-width, initial-scale=1, minimal-ui, maximum-scale=1.0, user-scalable=no")
      meta(http-equiv="cleartype", content="on")
      meta(name="format-detection", content="telephone=no")
      meta(name="msapplication-TileColor", content="#222222")
    link(href="#{current.base}styles/base.css", rel="stylesheet")
    if stylesheets
      each stylesheet in stylesheets
        link(rel="stylesheet", href="#{current.base}styles/#{stylesheet}.css")
    if html5
      <!--[if lt IE 9]>
      script(src="http://cdn.staticfile.org/html5shiv/3.7/html5shiv.min.js")
      <![endif]-->
  body(class="#{body_class ? body_class : ''}", id="#{body_id ? body_id : ''}")
    .wrap
      block header
        include partials/_header

      block content

      block footer
        include partials/_footer

    +modal({modals:modals})

    block scripts